{
  "name": "sistema-gestion-vigencias",
  "private": true,
  "version": "2.0.0",
  "description": "Sistema de Gestion de Vigencias - Procesamiento Automatizado SAE 9",
  "author": "Sistema de Gestion de Vigencias",
  "homepage": "./",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "predist": "npm run build",
    "dist": "electron-builder",
    "clean": "rm -rf dist release node_modules/.cache",
    "full-clean": "npm run clean && npm cache clean --force"
  },
  "engines": {
    "node": ">=18.19.0",
    "npm": ">=9.2.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^38.1.2",
    "electron-builder": "^24.13.3",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.43.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.1.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.vigencias.sistema",
    "productName": "Sistema de Gestion de Vigencias",
    "asar": true,
    "asarUnpack": [
      "powershell-bridge/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.cjs",
      "package.json",
      "!src/**/*",
      "!**/*.md",
      "!scripts/**/*"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      },
      {
        "from": "powershell-bridge",
        "to": "powershell-bridge",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "drivers",
        "to": "drivers",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./assets/logo.png",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "artifactName": "${productName}-Setup-${version}-x64.${ext}"
    },
    "compression": "maximum",
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  }
}
